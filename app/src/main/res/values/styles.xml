<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>


    <style name="AppTheme.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:colorButtonNormal">@color/yellow</item>
        <item name="android:colorControlHighlight">?attr/colorAccent</item>
    </style>

    <style name="InputMoneyField" parent="Base.V7.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:inputType">textCapCharacters|text|textNoSuggestions</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="AppTheme.InputWrapper">
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="AppTheme.OutputField">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.OutputField.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
